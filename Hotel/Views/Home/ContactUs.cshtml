@{
  ViewBag.Title = "ContactUs";
  Layout = "~/Views/Shared/LayoutHotel.cshtml";
}


<div class="container-fluid w-75 m-auto">
  <br />
  <br />
  <h1 class="uppercase hero-title mb-5 w-25">
    <span class="underline">Contact Us</span>
  </h1>
  <div class="row">
    <div class="col-7">
      <form action="#" method="post">
        <div class="row">
          <div class="col">
            <div class="form-group">
              <label><b>First Name</b></label>
              <input type="text" class="form-control" id="firtName" placeholder="Enter Your first name" style="height: 50px">
            </div>
          </div>
          <div class="col">
            <div class="form-group">
              <label><b>Last Name</b></label>
              <input type="text" class="form-control" id="lastName" placeholder="Enter Your last name" style="height: 50px">
            </div>
          </div>
        </div>
        <br />
        <div class="row">
          <div class="col">
            <div class="form-group">
              <label><b>Email</b></label>
              <input type="email" class="form-control" id="email" placeholder="hotelmanagement@gmail.com" style="height: 50px">
            </div>
          </div>
          <div class="col">
            <div class="form-group">
              <label><b>Phone Number</b></label>
              <input type="tel" class="form-control" id="phone" placeholder="(+84) 393462952" style="height: 50px">
            </div>
          </div>
        </div>
        <br />
        <div class="row">
          <div class="col">
            <div class="form-group">
              <label><b>Message or Enquiry</b></label>
              <input type="text" class="form-control" id="mess" placeholder="Type something" style="height: 150px">
            </div>
          </div>
        </div>
        <br />
        <div class="row">
          <div class="col">

          </div>
          <div class="col">
            <button type="submit" id="sendMess" class="btn btn-primary w-100" style="height:50px"><b>Send Message</b></button>
          </div>
        </div>
      </form>
    </div>
    <div class="col-5">
      <div class="row">
        <img src="~/Content/HinhAnh/map.png" class="w-50 ml-5 mb-3" />
      </div>
      <div class="row">
        <div class="col">
          <p class="">
            <i class="fa fa-map-marker" aria-hidden="true"></i><span class="ml-3">140 Lê Trọng Tấn, Tây Thạnh Tân Phú, Hồ Chí Minh</span>
          </p>
          <p class="">
            <i class="fa fa-volume-control-phone" aria-hidden="true"></i><span class="ml-3">(+84) 1900 1984</span>
          </p>
        </div>
      </div>
    </div>
  </div>
  <br />
  <br />
  <br />
  <br />
</div>

